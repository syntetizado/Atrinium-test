<script type="text/javascript">
	function equalizeHeights(className){
		var heightValues = [];
		$(className).each(function( i ) {
			let height = heightValues.push( $(this).height() );
		});

		var maxHeight;
		maxHeight = 0;
		for(i=0; i<heightValues.length; i++){
			maxHeight = Math.max(heightValues[i], maxHeight);
		}

		$(className).each(function( i ) {
			$(this).height(maxHeight);
		});
	}

	$(window).on('load', function () {
		$('.spacer').height( $('.footer').height() );

		equalizeHeights('.group-1');
	});

	$( window ).resize(function() {
		$('.spacer').height( $('.footer').height() );

		equalizeHeights('.group-1');
	});
</script>
